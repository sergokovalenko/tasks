@model UsersAward.PLL.Web.Models.UserModels.DeleteUserVM

@{
    Layout = "~/Views/Shared/_UsersLayout.cshtml";
    ViewBag.Title = "Delete";
}

<h2 class="text-center">Delete confimation</h2>

<h3 class="text-center">Are you sure you want to delete this?</h3>
<div>
    <hr />
    @{ Html.RenderPartial("_DisplayUserInfo", Model); }

    @using (Html.BeginForm("DeleteUser", "Users", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(x => x.Id)

        <div class="form-actions no-color text-center">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
