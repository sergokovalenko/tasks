{
  "required": ["name", "country", "city"],
  "properties": {
    "name": {
      "type": "string",
      "maxLength": 15,
      "pattern": "^[a-zA-Z].*$"
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "count": {
      "type": "integer",
      "maximum": 999,
      "minimum": 0,
      "default": 0
    },
    "price": {
      "type": "number",
      "maximum": 99999999999,
      "minimum": 0.01,
      "default": 0.01
    },
    "country": {
      "type": "string",
      "minLength": 3
    },
    "city": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "minLength": 3
      }
    }
  },
  "additionalProperties": false
}